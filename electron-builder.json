
{
  "appId": "com.mjak.automation",
  "productName": "MJAK Automation",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron/main.js",
    "electron/preload.js",
    "os/**/*",
    "!os/__pycache__/**/*",
    "!os/.git/**/*",
    "!os/node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "os",
      "to": "os",
      "filter": ["**/*", "!__pycache__", "!*.pyc", "!.git"]
    }
  ],
  "win": {
    "target": {
      "target": "nsis",
      "arch": ["x64"]
    },
    "icon": "public/favicon.ico",
    "requestedExecutionLevel": "asInvoker"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "MJAK Automation"
  },
  "publish": null
}
