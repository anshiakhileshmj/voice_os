
{
  "appId": "com.mjak.automation",
  "productName": "MJAK Automation",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "!os/**/*",
    "!src/**/*",
    "!public/**/*",
    "!node_modules/**/*"
  ],
  "extraFiles": [
    {
      "from": "public/o.png",
      "to": "public/o.png"
    }
  ],
  "extraResources": [
    {
      "from": "os/dist/api_server.exe",
      "to": "python-dist/api_server.exe"
    }
  ],
  "win": {
    "target": "nsis",
    "icon": "public/o.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "installerIcon": "public/o.png",
    "uninstallerIcon": "public/o.png"
  },
  "mac": {
    "icon": "public/o.png"
  },
  "linux": {
    "icon": "public/o.png"
  }
}
